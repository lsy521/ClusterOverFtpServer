        <format>jar</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>/</outputDirectory>
            <scope>runtime</scope>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>